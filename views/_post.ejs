<li id = "post-<%= post._id %>">
    <p>
    <small><%= i.content %></small>
    <% if(locals.user.id == i.user.id) { %>
    <small><a class="delete-post-button" href = "/post/distroy/<%= i.id%>" id="post-delete">Delete</a></small>
    <% } %>
    <br>
    <small><%= i.user.name %></small>
    </p>
<div>
    <form action="/comment/create" method="POST" id="new-comment-form">
            <input type="text" name="content" placeholder="Type comment here" required>
            <input type="hidden" name="post" value="<%= i._id%>">
            <input type="submit" value="Add Comment">
    </form>
    <div id="post-comment-list">
        <ul>
            <% for(comment of i.comments){ %>
                <%- include('_comment'); %>
            <% } %>
        </ul>
    </div>
</div>
</li>